<div class="breadcrumbs">
  <div class="container">
    <div class="breadcrumbs-main">
      <ol class="breadcrumb">
        <li><a href="/">Home</a></li>
        <li>Register</li>
      </ol>
    </div>
  </div>
</div>

<div class="prdt">
  <div class="container">
    <div class="prdt-top">
      <div class="col-md-12">
        <div class="product-one signup">
          <div class="register-top heading">
            <h2>REGISTRATION</h2>
          </div>

          <div class="register-main">
            <div class="col-md-6 account-left">
              <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= f.error_notification %>
                <div class="form-group has-feedback">
                  <%= f.input :first_name,
                              required: true,
                              autofocus: true,
                              input_html: {autocomplete: "first_name", class: "form-control", placeholder: "First name"}
                  %> 
                </div>
                <div class="form-group has-feedback">
                  <%= f.input :last_name,
                              required: true,
                              autofocus: true,
                              input_html: {autocomplete: "last_name", class: "form-control", placeholder: "Last name"}
                  %> 
                </div>
                <div class="form-group has-feedback">
                  <%= f.input :country,
                              as: :text,
                              required: true,
                              autofocus: true,
                              input_html: {class: "form-control", rows: 1, style:"resize:none", placeholder: "Country"}
                  %> 
                </div>
                <div class="form-group has-feedback">
                  <%= f.input :address,
                              required: true,
                              autofocus: true,
                              input_html: {autocomplete: "address", class: "form-control", placeholder: "Address"}
                  %> 
                </div>
                <div class="form-group has-feedback">
                  <%= f.input :phone,
                              required: true,
                              autofocus: true,
                              input_html: {autocomplete: "phone", class: "form-control", placeholder: "Phone"}
                  %> 
                </div>
                <div class="form-group has-feedback">
                  <%= f.input :email,
                              required: true,
                              autofocus: true,
                              input_html: {class: "form-control", placeholder: "Email"}
                  %>
                </div>
                <div class="form-group has-feedback">
                  <%= f.input :password,
                              required: true,
                              hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                              input_html: {autocomplete: "new-password", class: "form-control", placeholder: "Password"}
                  %> 
                </div>
                <div class="form-group has-feedback">
                  <%= f.input :password_confirmation,
                              required: true,
                              input_html: {autocomplete: "new-password", class: "form-control", placeholder: "Confirm Password"}
                  %> 
                </div>

                <%= f.button :submit, "Sign up", class: "btn btn-default" %>

              <% end %>

              <p><%= render "devise/shared/links" %></p>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>