<div class="breadcrumbs">
  <div class="container">
    <div class="breadcrumbs-main">
      <ol class="breadcrumb">
        <li><a href="/">Home</a></li>
        <li><a href="/admin/category/new">Add Category</a></li>
      </ol>
    </div>
  </div>
</div>

<div class="prdt">
  <div class="container">
    <div class="prdt-top">
      <div class="col-md-12">
        <div class="product-one signup">
          <div class="register-top heading">
            <h2>CREATE CATEGORY</h2>
          </div>

          <div class="register-main">
            <div class="col-md-6 account-left">
              <%= simple_form_for(@category, url: admin_category_index_url, html: {method: :post}) do |f| %>
                <%= f.error_notification %>
                <div class="form-group">
                  <%= f.input :title,
                              required: true,
                              autofocus: true,
                              input_html: {class: "form-control"}
                  %> 
                </div>
                <div class="form-group">
                  <%= f.input :bytitle,
                              label: "ByTitle",
                              required: true,
                              input_html: {class: "form-control"}
                  %> 
                </div>
                <div class="form-group">
                  <%= f.input :keywords,
                              required: false,
                              input_html: {class: "form-control"}
                  %>
                </div>
                <div class="form-group">
                  <%= f.input :description,
                              as: :text,
                              required: false,
                              input_html: {class: "form-control", rows: 2, style:"resize:none"}
                  %>
                </div>
                <div class="form-group">
                  <%= f.input :ancestry, 
                              :collection => @collection.sort, 
                              label_method: :first, 
                              value_method: :second,
                              :as => :radio_buttons,
                              checked: 0, 
                              required: false %>
                </div>
                <div class="form-actions">
                  <%= f.button :submit, "Create", class: "btn btn-success" %>
                </div>
              <% end %>
              <br>
              <div style="height:10px;font-size:10px;">&nbsp;</div>
              <%= link_to "Back", 'javascript:history.back()', class: "btn btn-default" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>