<div class="breadcrumbs">
  <div class="container">
    <div class="breadcrumbs-main">
      <ol class="breadcrumb">
        <li><a href="/">Home</a></li>
        <li><a href="/admin/category">Category Managing</a></li>
      </ol>
    </div>
  </div>
</div>

<div class="single">
  <div class="single-main">
    <div class="register-top heading">
      <p><h2>EDIT CATEGORY</h2></p>
    </div>
    <div class="container">
      <div class="table">
        <table id="productSizes" class="table table-bordered table-hover">
          <thead>
            <tr>
              <th style="width:5%">â„–</th>
              <th style="width:5%">ID</th>
              <th style="width:10%">Title</th>
              <th style="width:10%">ByTitle</th>
              <th style="width:20%">Parent</th>
              <th style="width:20%">Description</th>
              <th colspan="3" style="width:5%"></th>
            </tr>
          </thead>
          <tbody>
          <% i=0 %>
          <% @categories.each do |category| %>
            <tr>
              <td scope="row"><strong><%= i+=1 %></strong></th>
              <td><%= category.id %></td>
              <td><%= category.title %></td>
              <td><%= category.bytitle %></td>
              <td>
                <% category.ancestor_ids.each do |id| %>
                  <%= Category.find(id).title %>&nbsp;
                <% end %>
              </td>
              <td><%= category.description %></td>
              <td><%= link_to 'Show', category_path(category.id) %></td>
              <td><%= link_to 'Edit', edit_admin_category_path(category.id) %></td>
              <td><%= link_to 'Destroy', admin_category_path(category.id),
                        data: {confirm: "Are you sure?"}, method: :delete %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="clearfix"></div>
  </div>
</div>