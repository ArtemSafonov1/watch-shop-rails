<div class="breadcrumbs">
  <div class="container">
    <div class="breadcrumbs-main">
      <ol class="breadcrumb">
        <li><a href="/">Home</a></li>
        <li><a href="/admin/user/order">User Orders Managing</a></li>
      </ol>
    </div>
  </div>
</div>

<div class="single">
  <div class="single-main">
    <div class="register-top heading">
      <p><h2>EDIT ORDERS</h2></p>
    </div>
    <div class="container">
      <div class="table">
        <table id="productSizes" class="table table-bordered table-hover">
          <thead>
            <tr>
              <th style="width:3%">â„–</th>
              <th style="width:5%">Status</th>
              <th style="width:10%">User</th>
              <th style="width:20%">Comment</th>
              <th style="width:10%">Total Amount</th>
              <th style="width:10%">Total Price, $</th>
              <th colspan="3" style="width:5%"></th>
            </tr>
          </thead>
          <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td scope="row"><strong><%= order.id %></strong></th>
              <td><%= order.status %></td>
              <td>
                <%= order.user.email %>
              </td>
              <td>
                <%= order.comment %>
              </td>
              <td><%= order.orders_products.sum(:quantity) %></td>
              <td><%= order.orders_products.sum(:price) %></td>
              <td><%= link_to 'Show', admin_user_order_path(order.id) %></td>
              <td><%= link_to 'Edit', edit_admin_user_order_path(order.id) %></td>
              <td><%= link_to 'Destroy', admin_user_order_path(order.id),
                        data: {confirm: "Are you sure?"}, method: :delete %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="clearfix"></div>
  </div>
</div>